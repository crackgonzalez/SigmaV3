<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:layout_margin="2dp"
                android:src="@mipmap/ic_libro"/>

            <TextView
                android:id="@+id/txv_sigla"
                android:layout_margin="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="52152"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:layout_margin="2dp"
                android:src="@mipmap/ic_calendario"/>

            <TextView
                android:id="@+id/txv_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="17/08/2018"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_horarios"
            android:orientation="horizontal"
            android:layout_below="@id/lyt_fecha"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H.I.S "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txv_his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="H.T.S "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txv_hts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:20"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_dos"
            android:orientation="horizontal"
            android:layout_below="@id/lyt_horarios"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERMANENCIA "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txv_permanencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="RECARGO "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txv_recargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:20"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/lyt_dos"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="CARGA "/>

            <TextView
                android:id="@+id/txv_carga"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="5:30"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>